@{
    ViewBag.Title = "Home Page";
}

@Scripts.Render("~/bundles/jquery")

<br/>
<div>
    <p>
        <textarea id="data" name="data" rows="10" cols="30">
            3
            7 4
            2 4 6
            8 5 9 3
        </textarea>
    </p>
</div>


<p><a id="sub" class="btn btn-default" href="#">Submit</a></p>

<script>
    $(document).ready(
        function()
        {
            $('#sub').click(function () {
                        alert($('#data').val());
                        $.ajax({
                            url: "@Url.Action("GetResult", "Home")",
                            data: "data=" + $('#data').val(),
                            type: "POST"
                        })
                          .done(function (data) {
                                if (console && console.log)
                                {
                                    alert(data.sum + "   " + data.dir);
                                    //alert("Got response:");
                                }
                            });
            })
        }
     )
</script>

